<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>


    <style name="Toolbar.Titlestyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLength">5</item>
    </style>
    <style name="Toolbar.Subtitlestyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="myRadiostyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>